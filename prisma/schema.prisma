generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  password String
  name     String?
  userImage  String?  @default("/images/user-avatar.jpg")
  orders    Order[]
  wishlist  Wishlist[]
}

model Order {
  id        Int      @id @default(autoincrement())
  stripeId  String   @unique
  amount    Int
  metadata  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  items     OrderItem[]
}

model OrderItem {
  id          Int      @id @default(autoincrement())
  orderId     Int
  order       Order    @relation(fields: [orderId], references: [id])
  productName String
  productImage String
  unitAmount  Int
  quantity    Int
}

model Wishlist {
  id          Int      @id @default(autoincrement())
  sanityId    String   @unique
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
  productName String
  productImage String
  productPrice Int?
  productRatings Int?
  productStars Int?
  productDescription String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}